<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:gravity="top|center"
              android:orientation="vertical"
              android:visibility="visible">


    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_weight="0"
        android:gravity="top|right"
        android:text="license"
        />

    <TextView
        android:id="@+id/license"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_weight="2"
        android:gravity="top|center"
        android:text="@string/settings_license"
        />


    <TextView
        android:id="@+id/subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_weight="0.02"
        android:gravity="bottom|center"
        android:text="@string/subscription"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="0dip"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/monthly_subscription"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:background="@drawable/button_license"
            android:onClick="subscription"
            android:text="@string/subscription_period_monthly"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/onetimefee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="10dip"
        android:layout_weight="0.05"
        android:gravity="bottom|center"
        android:text="@string/onetimefee"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="0dip"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/onetimefee2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_license"
            android:onClick="Premium2"
            android:text="@string/onetimefee2"
            />

        <Button
            android:id="@+id/onetimefee5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/button_license"
            android:onClick="Premium5"
            android:text="@string/onetimefee5"
            />

        <Button
            android:id="@+id/onetimefee10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_license"
            android:onClick="Premium10"
            android:text="@string/onetimefee10"
            />
    </LinearLayout>

    <!--    <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_back"
            app:fabSize="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            />-->
</LinearLayout>

