<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">

    <PreferenceScreen
        android:layout_width="fill_parent"
        android:layout_height="135.0dip"
        android:key="colors"
        android:layout="@layout/notif_panel"/>

    <PreferenceCategory android:title="@string/Backup_Restore"/>

    <Preference
        android:key="tweaks_backup_colors"
        android:title="@string/tweaks_backup_colors"/>

    <Preference
        android:key="tweaks_restore_colors"
        android:title="@string/tweaks_restore_colors"/>

    <Preference
        android:key="tweaks_stock_look"
        android:title="@string/tweaks_stock_colors_title"/>

    <PreferenceCategory android:title="@string/navbar_color_preference_title"/>

    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_colors"
        android:key="tweaks_unlock_navbar_colors"
        android:summary="@string/tweaks_allow_color_change_summary"
        android:summaryOn="@string/tweaks_allow_color_change_summaryOn"
        android:title="@string/tweaks_allow_color_change"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="tweaks_dynamic_navbar"
        android:summary="@string/tweaks_dynamic_navbar_summary"
        android:title="@string/tweaks_dynamic_navbar_title"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-328966"
        android:dependency="tweaks_unlock_navbar_colors"
        android:key="tweaks_navbar_icon_color"
        android:title="@string/tweaks_navbar_icon_color"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <!--<com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-986896"
        android:dependency="tweaks_unlock_navbar_colors"
        android:key="tweaks_navbar_keyboard_color"
        android:title="@string/tweaks_navbar_keyboard_color"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>-->

    <PreferenceCategory android:title="@string/header_color_preference_title"/>

    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_colors"
        android:key="tweaks_unlock_header_colors"
        android:summary="@string/tweaks_allow_color_change_summary"
        android:summaryOn="@string/tweaks_allow_color_change_summaryOn"
        android:title="@string/tweaks_allow_color_change"/>

    <!-- ALL customcolorpicker.ColorPreference must have android:defaultvalue in order for settings.system saved values to work
    Original code found here: https://github.com/jrummyapps/colorpicker as well as Parameter WIKI-->
    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-14342875"
        android:dependency="tweaks_unlock_header_colors"
        android:key="tweaks_header_text_color"
        android:title="@string/tweaks_header_text_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-1289411291"
        android:dependency="tweaks_unlock_header_colors"
        android:key="tweaks_header_icon_color"
        android:title="@string/tweaks_header_icon_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <Preference
        android:key="tweaks_header_stock_look"
        android:title="@string/tweaks_stock_header_colors_title"/>

    <PreferenceCategory android:title="@string/quick_settings_preference_title"/>

    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_colors"
        android:key="tweaks_unlock_qs_colors"
        android:summary="@string/tweaks_allow_color_change_summary"
        android:summaryOn="@string/tweaks_allow_color_change_summaryOn"
        android:title="@string/tweaks_allow_color_change"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-328966"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_background_color"
        android:title="@string/tweaks_qs_panel_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-14342875"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_text_color"
        android:title="@string/tweaks_qs_text_color_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-14498561"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_icon_on_color"
        android:title="@string/tweaks_qs_icon_on_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="1294279973"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_icon_off_color"
        android:title="@string/tweaks_qs_icon_off_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="1294279973"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_divider_color"
        android:title="@string/tweaks_qs_divider_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-11091739"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_slider_color"
        android:title="@string/tweaks_qs_slider_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-328966"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_drag_handle_background_color"
        android:title="@string/tweaks_qs_drag_background_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-869980891"
        android:dependency="tweaks_unlock_qs_colors"
        android:key="tweaks_qs_drag_handle_icon_color"
        android:title="@string/tweaks_qs_drag_icon_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <Preference
        android:key="tweaks_qs_stock_look"
        android:title="@string/tweaks_stock_qs_colors_title"/>

    <PreferenceCategory android:title="@string/notifications_color_preference_title"/>

    <SwitchPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_colors"
        android:key="tweaks_unlock_notification_colors"
        android:summary="@string/tweaks_allow_color_change_summary"
        android:summaryOn="@string/tweaks_allow_color_change_summaryOn"
        android:title="@string/tweaks_allow_color_change"/>

    <SwitchPreference
        android:defaultValue="false"
        android:dependency="tweaks_unlock_notification_colors"
        android:key="tweaks_allow_transparent_notifications"
        android:summary="@string/tweaks_allow_transparent_notification_summary"
        android:title="@string/tweaks_allow_transparent_notification_title"/>


    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-328966"
        android:dependency="tweaks_unlock_notification_colors"
        android:key="tweaks_notification_background_color"
        android:title="@string/tweaks_notif_background_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="1"
        android:dependency="tweaks_unlock_notification_colors"
        android:key="tweaks_notification_title_text_color"
        android:title="@string/tweaks_notif_title_text_title"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="1"
        android:dependency="tweaks_unlock_notification_colors"
        android:key="tweaks_notification_summary_text_color"
