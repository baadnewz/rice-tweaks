    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-651877083"
        android:dependency="tweaks_unlock_notification_colors"
        android:key="tweaks_notif_footer_text_color"
        android:title="@string/tweaks_notif_footer_text_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <com.ice.box.customcolorpicker.ColorPreference
        android:defaultValue="-328966"
        android:dependency="tweaks_unlock_notification_colors"
        android:key="tweaks_notif_footer_background_color"
        android:title="@string/tweaks_notif_footer_background_title"
        app:cpv_showAlphaSlider="true"
        app:cpv_showColorShades="true"/>

    <Preference
        android:key="tweaks_notif_stock_look"
        android:title="@string/tweaks_stock_notif_colors_title"/>
</PreferenceScreen>