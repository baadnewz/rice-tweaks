<resources>

    <!-- Base application theme. -->
    <style name="ThemeLight" parent="Theme.AppCompat.Light">
        <item name="android:colorControlHighlight">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
        <item name="actionBarColor">@color/samsung_default_color</item>
        <item name="splashscreenAnimationColor">@color/samsung_default_dark_color</item>
        <item name="android:colorAccent">@color/pixel_blue</item>
        <item name="colorAccent">@color/pixel_blue</item>
        <item name="android:listDivider">@null</item>
        <item name="android:colorPrimary">@color/samsung_default_color</item>
        <item name="android:colorPrimaryDark">@color/samsung_default_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@color/samsung_default_color</item>
        <item name="android:windowBackground">@color/samsung_default_color</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeDark" parent="Theme.AppCompat">
        <item name="android:colorControlHighlight">@color/lighter_gray</item>
        <item name="colorControlHighlight">@color/lighter_gray</item>
        <item name="actionBarColor">@color/samsung_default_dark_color</item>
        <item name="splashscreenAnimationColor">@color/samsung_default_color</item>
        <item name="android:colorAccent">@color/pixel_blue</item>
        <item name="colorAccent">@color/pixel_blue</item>
        <item name="android:listDivider">@null</item>
        <item name="android:colorPrimary">@color/samsung_default_dark_color</item>
        <item name="android:colorPrimaryDark">@color/samsung_default_dark_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/samsung_default_dark_color</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeLightSettings" parent="ThemeLight"/>

    <style name="ThemeDarkSettings" parent="ThemeDark"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorPrimary">?colorPrimary</item>
        <item name="android:colorPrimaryDark">?colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="cpv_ColorPickerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">315dp</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
